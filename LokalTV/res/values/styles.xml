<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <style name="Theme.MyStyle" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/action_item_selector</item>
        <item name="android:actionBarStyle">@style/SolidActionBar.MyStyle</item>
        <item name="android:seekBarStyle">@style/SeekBar.MyStyle</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:icon">@drawable/ic_logo</item>
    </style>

    <style name="Theme.MyStyle.Feed" parent="@style/Theme.MyStyle">
<!--         <item name="android:windowTranslucentStatus">true</item> -->
<!--         <item name="android:windowActionBarOverlay">true</item> -->
<!--         <item name="android:windowTranslucentNavigation">true</item> -->
    </style>

    <style name="Theme.MyStyle.Video" parent="@style/Theme.MyStyle">
        <item name="android:actionBarStyle">@style/TransparentActionBar.MyStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- <item name="android:windowAnimationStyle">@style/VideoWindowAnimation</item> -->
    </style>

    <style name="VideoWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="SolidActionBar.MyStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/blue_transparent</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle.MyStyle</item>
        <item name="android:indeterminateProgressStyle">@style/ActionBarProgressBar.MyStyle</item>
    </style>

    <style name="TransparentActionBar.MyStyle" parent="@style/SolidActionBar.MyStyle">
        <item name="android:background">@drawable/gradient</item>
    </style>

    <style name="ActionBarTitleTextStyle.MyStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ActionBarProgressBar.MyStyle" parent="@android:style/Widget.Holo.ProgressBar.Small">
        <item name="android:minWidth">28dp</item>
        <item name="android:maxWidth">28dp</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:maxHeight">28dp</item>
    </style>

    <style name="SeekBar.MyStyle" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">@drawable/mystyle_scrubber_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/mystyle_scrubber_progress_horizontal_holo_light</item>
        <item name="android:thumb">@drawable/mystyle_scrubber_control_selector_holo_light</item>
    </style>

