<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <style name="Theme.MyStyle" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/action_item_selector</item>
        <item name="actionBarStyle">@style/SolidActionBar.MyStyle</item>
        <item name="android:actionBarItemBackground">@drawable/action_item_selector</item>
        <item name="android:actionBarStyle">@style/SolidActionBar.MyStyle</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:seekBarStyle">@style/SeekBar.MyStyle</item>
    </style>

    <style name="Theme.MyStyle.Video" parent="@style/Theme.MyStyle">
        <item name="android:actionBarStyle">@style/TransparentActionBar.MyStyle</item>
        <item name="actionBarStyle">@style/TransparentActionBar.MyStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="SolidActionBar.MyStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/blue</item>
        <item name="titleTextStyle">@style/ActionBarTitleTextStyle.MyStyle</item>
        <item name="android:background">@color/blue</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle.MyStyle</item>
    </style>

    <style name="TransparentActionBar.MyStyle" parent="@style/SolidActionBar.MyStyle">
        <item name="background">@drawable/gradient</item>
        <item name="android:background">@drawable/gradient</item>
    </style>

    <style name="ActionBarTitleTextStyle.MyStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="SeekBar.MyStyle" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">@drawable/mystyle_scrubber_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/mystyle_scrubber_progress_horizontal_holo_light</item>
        <item name="android:thumb">@drawable/mystyle_scrubber_control_selector_holo_light</item>
    </style>

    <style name="DrawerMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drawer_item_selector</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#F2F2F2</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginBottom">0.5dp</item>
    </style>

    <style name="DrawerMenuItem2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drawer_item_selector_2</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginBottom">0.5dp</item>
    </style>

    <style name="DrawerMenuLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/accent_blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DrawerMenuSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="android:background">@color/accent_blue</item>
    </style>

</resources>